public static void main(String[] args) { 

Scanner pk=new Scanner (System.in); 

System.out.println("Enter the length of the Rectangle:"); 

int length=pk.nextInt(); 

System.out.println("Enter the breath of the Rectangle:"); 

int breath=pk.nextInt(); 

 

int perimeter=2*(length+breath); 

System.out.println(""+perimeter); 

} 

 

} 

 

Power of each: 

package monday; 

import java.util.*; 

public class Power { 

 

public static int power(int base, int exponent) 

{ 

int result = 1; 

for (int i = 0; i < exponent; i++)  

{ 

result =result * base; 

} 

return result; 

} 

public static void main(String[] args) { 

Scanner pk = new Scanner(System.in); 

 

System.out.print("Enter the base number: "); 

int base = pk.nextInt(); 

System.out.print("Enter the exponent number: "); 

int exponent = pk.nextInt(); 

int powerResult = power(base, exponent); 

System.out.println(base + " to the power of " + exponent + " is: " + powerResult); 

} 

} 

 

 

Compound Interest: 

package monday; 

import java.util.*; 

public class CompoundInterest { 

public static void main(String[] args) { 

Scanner pk=new Scanner(System.in); 

System.out.println("Enter the principle amount:"); 

double p=pk.nextDouble(); 

System.out.println("enter the time duration in years :"); 

double t=pk.nextDouble(); 

System.out.println("Enter the rate of interest:"); 

double r=pk.nextDouble(); 

System.out.println("No.of times interest is compounded in a year:"); 

double n=pk.nextDouble(); 

 

double CI=p*Math.pow((1+r/100),(t*n))-p; 

; 

System.out.println(" Compound Interest : "+CI); 

 

 

} 

} 

 

Factorial: 

package monday; 

import java.util.*; 

public class Factorial { 

public static void main(String[] args) { 

Scanner pk=new Scanner(System.in); 

System.out.println("Enter the number:"); 

int number=pk.nextInt(); 

 

int factorial=1; 

for(int i =1;i<=number;i++) { 

factorial*=i; 

} 

System.out.println("The factorial for "+number+"is:"+factorial); 

} 

} 

 

Fibonacci: 

package monday; 

import java.util.*; 

public class FibonacciSumEvenIndexes { 

public static void main(String[] args) { 

Scanner pk = new Scanner(System.in); 

System.out.print("Enter the number: "); 

int num = pk.nextInt(); 

int a = 0; 

int b = 1; 

int result = 0; 

if(num == 0 || num == 1) { 

System.out.println(a); 

} 

else { 

for(int i=2; i<=num*2; i++) { 

int c = a+b; 

a = b; 

b = c; 

if(i%2 == 0) { 

result = result + c; 

} 

} 

} 

System.out.println(result); 

} 

} 

 

Neon Number: 

package monday; 

import java.util.*; 

public class NeonNumber { 

public static void main(String[] args) { 

Scanner pk = new Scanner(System.in); 

System.out.print("Enter a number: "); 

int num = pk.nextInt(); 

int a = num*num; 

int result = 0; 

while(a!=0) { 

int r = a%10; 

result = result + r; 

a = a/10; 

} 

if(num == result) { 

System.out.println(num + " is Neon Number"); 

} 

else { 

System.out.println(num + " is not a Neon Number"); 

} 

} 

 

} 

 

